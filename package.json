{
  "name": "kirbyup",
  "version": "0.22.2",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "license": "MIT",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "require": "./dist/plugin.cjs",
      "import": "./dist/plugin.mjs",
      "types": "./dist/plugin.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "kirbyup": "./bin/kirbyup.cjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "test": "vitest --watch",
    "test:update": "vitest --update",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "vitest --run && esno scripts/release.ts",
    "prepare": "pnpm exec simple-git-hooks"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec esno scripts/verifyCommit.ts $1"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "consola": "^2.15.3",
    "execa": "5.1.1",
    "pathe": "^0.2.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.6",
    "postcss-dir-pseudo-class": "^6.0.4",
    "postcss-load-config": "^3.1.3",
    "postcss-logical": "^5.0.4",
    "sass": "^1.49.7",
    "unconfig": "^0.3.1",
    "vite": "^2.8.2",
    "vite-plugin-vue2": "^1.9.3",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@antfu/utils": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.18",
    "@types/prompts": "^2.4.0",
    "@types/semver": "^7.3.9",
    "conventional-changelog-cli": "^2.2.2",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "prompts": "^2.4.2",
    "simple-git-hooks": "^2.7.0",
    "ts-essentials": "^9.1.2",
    "typescript": "^4.5.5",
    "unbuild": "^0.6.9",
    "vitest": "^0.3.5"
  }
}
