{
  "name": "kirbyup",
  "type": "module",
  "version": "3.1.3",
  "packageManager": "pnpm@8.15.3",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "bugs": "https://github.com/johannschopplich/kirbyup/issues",
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "cli",
    "panel",
    "bundler"
  ],
  "exports": {
    ".": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.mjs"
    },
    "./config": {
      "types": "./dist/client/config.d.ts",
      "import": "./dist/client/config.mjs"
    },
    "./plugin": {
      "types": "./dist/client/plugin.d.ts",
      "import": "./dist/client/plugin.mjs"
    }
  },
  "module": "./dist/node/index.mjs",
  "types": "./dist/node/index.d.ts",
  "typesVersions": {
    "*": {
      "config": [
        "./dist/client/config.d.ts"
      ],
      "plugin": [
        "./dist/client/plugin.d.ts"
      ]
    }
  },
  "bin": "./cli.mjs",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "UNBUILD_STUB=true unbuild",
    "docs": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:serve": "pnpm -C docs run serve",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit --push --tag",
    "test": "vitest --no-isolate",
    "test:types": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@vitejs/plugin-vue2": "2.2.0",
    "@vitejs/plugin-vue2-jsx": "1.1.0",
    "@vue/compiler-sfc": "^2.7.16",
    "c12": "^1.8.0",
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "consola": "^3.2.3",
    "magic-string": "^0.30.7",
    "pathe": "^1.1.2",
    "perfect-debounce": "^1.0.0",
    "postcss": "^8.4.35",
    "postcss-dir-pseudo-class": "^8.0.1",
    "postcss-load-config": "^5.0.3",
    "postcss-logical": "^7.0.1",
    "rollup-plugin-external-globals": "^0.9.2",
    "sass": "^1.70.0",
    "vite": "^5.1.2",
    "vite-plugin-full-reload": "^1.1.0",
    "vue": "^2.7.16"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.18",
    "@types/prompts": "^2.4.9",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "nypm": "^0.3.6",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.3.3",
    "unbuild": "^3.0.0-rc.1",
    "vitest": "^1.2.2"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  }
}
