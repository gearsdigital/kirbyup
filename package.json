{
  "name": "kirbyup",
  "version": "3.0.1",
  "packageManager": "pnpm@8.7.4",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "bugs": "https://github.com/johannschopplich/kirbyup/issues",
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "cli",
    "panel",
    "bundler"
  ],
  "exports": {
    ".": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.mjs"
    },
    "./config": {
      "types": "./dist/client/config.d.ts",
      "import": "./dist/client/config.mjs"
    },
    "./plugin": {
      "types": "./dist/client/plugin.d.ts",
      "import": "./dist/client/plugin.mjs"
    }
  },
  "module": "./dist/node/index.mjs",
  "types": "./dist/node/index.d.ts",
  "typesVersions": {
    "*": {
      "config": [
        "./dist/client/config.d.ts"
      ],
      "plugin": [
        "./dist/client/plugin.d.ts"
      ]
    }
  },
  "bin": "./cli.mjs",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "STUB=true unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit --push --tag",
    "test": "vitest",
    "test:types": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@vitejs/plugin-vue2": "2.2.0",
    "@vitejs/plugin-vue2-jsx": "1.1.0",
    "@vue/compiler-sfc": "^2.7.14",
    "cac": "^6.7.14",
    "chokidar": "^3.5.3",
    "consola": "^3.2.3",
    "detect-package-manager": "^3.0.1",
    "magic-string": "^0.30.3",
    "pathe": "^1.1.1",
    "perfect-debounce": "^1.0.0",
    "postcss": "^8.4.29",
    "postcss-dir-pseudo-class": "^8.0.0",
    "postcss-load-config": "^4.0.1",
    "postcss-logical": "^7.0.0",
    "rollup-plugin-external-globals": "^0.8.0",
    "sass": "^1.66.1",
    "unconfig": "^0.3.10",
    "vite": "^4.4.9",
    "vite-plugin-full-reload": "^1.0.5",
    "vue": "^2.7.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.17.15",
    "@types/prompts": "^2.4.4",
    "bumpp": "^9.2.0",
    "eslint": "^8.49.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.4"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  }
}
