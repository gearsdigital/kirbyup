{
  "name": "kirbyup",
  "version": "0.21.1",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "files": [
    "bin",
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/client/plugin.js",
      "types": "./dist/client/plugin.d.ts"
    }
  },
  "main": "./dist/index.js",
  "bin": {
    "kirbyup": "./bin/kirbyup.js"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "scripts": {
    "dev": "tsup --watch src",
    "build": "tsup && npm run build:client",
    "build:client": "esbuild src/client/plugin.ts --format=esm --outdir=dist/client && tsc src/client/plugin.ts --declaration --emitDeclarationOnly --outDir dist/client",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.16",
    "consola": "^2.15.3",
    "pathe": "^0.2.0",
    "postcss-dir-pseudo-class": "^6.0.0",
    "postcss-logical": "^5.0.0",
    "sass": "^1.43.4",
    "vite": "^2.6.14",
    "vite-plugin-vue2": "^1.9.0",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "conventional-changelog-cli": "^2.1.1",
    "esno": "^0.12.1",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "prompts": "^2.4.2",
    "ts-essentials": "^9.0.0",
    "ts-jest": "^27.0.7",
    "tsup": "^5.9.1",
    "typescript": "^4.5.2"
  }
}
