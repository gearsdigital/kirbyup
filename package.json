{
  "name": "kirbyup",
  "version": "0.18.0",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js"
    },
    "./plugin": {
      "import": "./dist/client/plugin.js"
    }
  },
  "main": "dist/index.js",
  "bin": {
    "kirbyup": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "scripts": {
    "build": "tsup src/node/cli.ts src/node/index.ts --clean --dts && npm run build:client",
    "build:client": "esbuild src/client/plugin.ts --format=esm --outdir=dist/client && tsc src/client/plugin.ts --declaration --emitDeclarationOnly --outDir dist/client",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "cac": "^6.7.8",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.16",
    "postcss-dir-pseudo-class": "^6.0.0",
    "postcss-logical": "^5.0.0",
    "sass": "^1.42.1",
    "vite": "^2.6.7",
    "vite-plugin-vue2": "^1.8.2",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "conventional-changelog-cli": "^2.1.1",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "prompts": "^2.4.2",
    "ts-essentials": "^9.0.0",
    "ts-jest": "^27.0.5",
    "tsup": "^5.4.0",
    "typescript": "^4.4.3"
  }
}
