{
  "name": "kirbyup",
  "version": "1.1.0",
  "packageManager": "pnpm@7.5.0",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./cli.mjs",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit --push --tag",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm exec simple-git-hooks"
  },
  "dependencies": {
    "@vitejs/plugin-vue2": "^1.1.2",
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "consola": "^2.15.3",
    "pathe": "^0.3.2",
    "perfect-debounce": "^0.1.3",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.14",
    "postcss-dir-pseudo-class": "^6.0.5",
    "postcss-load-config": "^4.0.1",
    "postcss-logical": "^5.0.4",
    "sass": "^1.53.0",
    "unconfig": "^0.3.5",
    "vite": "^3.0.0-beta.9",
    "vue": "^2.7.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.0.3",
    "@types/prompts": "^2.4.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.19.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "vitest": "^0.18.0"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  }
}
