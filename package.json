{
  "name": "kirbyup",
  "version": "0.14.0",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "bin": {
    "kirbyup": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12",
    "npm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --clean --dts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "cac": "^6.7.3",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.14",
    "postcss-dir-pseudo-class": "^6.0.0",
    "postcss-logical": "^5.0.0",
    "sass": "^1.42.1",
    "vite": "^2.6.2",
    "vite-plugin-vue2": "^1.8.2",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "conventional-changelog-cli": "^2.1.1",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "prompts": "^2.4.1",
    "ts-essentials": "^9.0.0",
    "ts-jest": "^27.0.5",
    "tsup": "^5.2.1",
    "typescript": "^4.4.3"
  }
}
