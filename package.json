{
  "name": "kirbyup",
  "version": "0.22.2",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "license": "MIT",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "require": "./dist/plugin.cjs",
      "import": "./dist/plugin.mjs",
      "types": "./dist/plugin.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "kirbyup": "./bin/kirbyup.cjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "test": "vitest",
    "test:update": "vitest -u",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.16",
    "consola": "^2.15.3",
    "pathe": "^0.2.0",
    "postcss": "^8.4.5",
    "postcss-dir-pseudo-class": "^6.0.2",
    "postcss-load-config": "^3.1.1",
    "postcss-logical": "^5.0.2",
    "sass": "^1.46.0",
    "unconfig": "^0.2.2",
    "vite": "^2.7.10",
    "vite-plugin-vue2": "^1.9.2",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@antfu/utils": "^0.4.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.8",
    "conventional-changelog-cli": "^2.2.2",
    "esno": "^0.13.0",
    "execa": "5.1.1",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prompts": "^2.4.2",
    "ts-essentials": "^9.1.2",
    "typescript": "^4.5.4",
    "unbuild": "^0.6.7",
    "vitest": "^0.0.134"
  }
}
