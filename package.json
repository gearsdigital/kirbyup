{
  "name": "kirbyup",
  "version": "1.0.2",
  "packageManager": "pnpm@7.1.9",
  "description": "Zero-config bundler for Kirby Panel plugins",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirbyup#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/kirbyup.git"
  },
  "bugs": {
    "url": "https://github.com/johannschopplich/kirbyup/issues"
  },
  "keywords": [
    "kirby-cms",
    "kirby-plugin",
    "kirby",
    "panel",
    "bundle"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "kirbyup": "./bin/kirbyup.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit --push --tag --execute \"pnpm run changelog\"",
    "changelog": "npx conventional-changelog-cli -p angular -r 0 -i CHANGELOG.md -s && npx prettier --write CHANGELOG.md",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm exec simple-git-hooks"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "consola": "^2.15.3",
    "pathe": "^0.3.0",
    "perfect-debounce": "^0.1.3",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.14",
    "postcss-dir-pseudo-class": "^6.0.4",
    "postcss-load-config": "^4.0.1",
    "postcss-logical": "^5.0.4",
    "sass": "^1.52.2",
    "unconfig": "^0.3.4",
    "vite": "2.9.9",
    "vite-plugin-vue2": "^2.0.1",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.41",
    "@types/prompts": "^2.4.0",
    "bumpp": "^7.1.1",
    "eslint": "^8.17.0",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "simple-git-hooks": "^2.8.0",
    "tsx": "^3.4.2",
    "typescript": "^4.7.3",
    "unbuild": "^0.7.4",
    "vitest": "^0.14.1"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  }
}
